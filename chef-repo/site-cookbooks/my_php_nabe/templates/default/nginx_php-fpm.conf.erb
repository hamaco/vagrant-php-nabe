server {
    listen <%= @php["http_port"] %>;
    root /webroot;

    location / {
        index index.html index.php;
    }

    location ~ \.php$ {
        fastcgi_pass 127.0.0.1:<%= @php["fpm_port"] %>;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}
